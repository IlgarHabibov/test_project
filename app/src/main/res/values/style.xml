<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyTextAPP" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxBackgroundColor">@color/gray</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/blue</item>
    </style>
</resources>