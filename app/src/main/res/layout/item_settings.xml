<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parentSettingsItem"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    
    <ImageView
        android:id="@+id/imageSettingsItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_mail"/>
    
    <TextView
        android:id="@+id/labelNameSettingsItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Language"
        android:textColor="@color/dark_gray"
        android:textSize="20sp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toEndOf="@id/imageSettingsItem"
        app:layout_constraintEnd_toStartOf="@id/imageEndSettingsItem"
        app:layout_constraintTop_toTopOf="@id/imageSettingsItem"
        app:layout_constraintBottom_toBottomOf="@id/imageSettingsItem"/>

    <ImageView
        android:id="@+id/imageEndSettingsItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageSettingsItem"
        android:src="@drawable/ic_arrow" />

</androidx.constraintlayout.widget.ConstraintLayout>